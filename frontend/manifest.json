{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "PromptAI",
    "description": "Prompt Engineering at your fingertips",
    "permissions" : ["scripting"],
    "action": {
        "default_popup": "js/index.html",
        "default_title": "PromptAI"
    },
    "content_scripts": [
        {
            "world": "MAIN",
            "matches": ["https://chat.openai.com/*"],
            "js": ["js/content.js"],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "js": ["js/message.js"],
            "matches": ["https://chat.openai.com/*"]
        }

    ],
    "background": {
        "service_worker": "js/background.js"
    }
}