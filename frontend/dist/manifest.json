{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "PromptGPT",
    "description": "Prompt Engineering at your fingertips",
    "permissions" : ["scripting"],

    "action": {
        "default_icon": {
          "16": "./pai16.png",
          "128": "./pai128.png"
        },
        "default_title": "S.P.E.D.",
        "default_popup": "js/index.html"
    },

    "content_scripts": [
        {
            "world" : "MAIN",
            "matches": ["https://chat.openai.com/*"],
            "js": ["js/content.js"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
  "icons": {
      "16": "pai16.png",
      "32": "headphone-symbol32.png",
      "128": "pai128.png"
  },
  "action": {
      "default_icon": {
        "16": "pai16.png",
        "32": "headphone-symbol32.png",
        "128": "pai128.png"
      }
    }
}