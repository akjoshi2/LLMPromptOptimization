{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "PromptGPT",
    "description": "Prompt Engineering at your fingertips",
    "permissions" : ["scripting"],
    "action": {
        "default_popup": "js/index.html",
        "default_title": "React Chrome Extension"
    },
    "content_scripts": [
        {
            "world" : "MAIN",
            "matches": ["https://chat.openai.com/*"],
            "js": ["js/content.js"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "icons":
        {
        "16": "logoimages/16x16logo.png",
        "19": "logoimages/19x19logo.png",
        "38": "logoimages/38x38logo.png",
        "48": "logoimages/48x48logo.png",
        "128": "logoimages/128x128logo.png"
        }
}